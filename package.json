{
  "name": "@johnls/stampver",
  "version": "2.0.4",
  "engines": {
    "node": ">=10.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "description": "Version stamping tool",
  "scripts": {
    "clean": "rm -rf dist/*",
    "start": "ts-node src/stampver.ts",
    "build": "npm run clean && tsc",
    "debug": "ts-node --inspect-brk src/stampver.ts",
    "test": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "deploy": "npm publish --access public",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "show-coverage": "open coverage/lcov-report/index.html"
  },
  "bin": {
    "stampver": "dist/stampver.js"
  },
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlyonsmith/stampver.git"
  },
  "keywords": [
    "version",
    "stamp",
    "tool"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlyonsmith/stampver/issues"
  },
  "homepage": "https://github.com/jlyonsmith/stampver#readme",
  "dependencies": {
    "@johnls/json5": "^2.3.0",
    "chalk": "^4.1.0",
    "luxon": "^1.25.0",
    "minimist": "^1.2.5",
    "tmp-promise": "^3.0.2",
    "xregexp": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/luxon": "^1.25.1",
    "@types/minimatch": "^3.0.3",
    "@types/minimist": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "jest-cli": "^26.6.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
